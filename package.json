{
  "name": "actions-lib",
  "version": "2.0.0",
  "description": "Typescript Helpers Library",
  "main": "src/index.ts",
  "publishConfig": {
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "exports": {
      ".": {
        "import": "./dist/index.mjs",
        "require": "./dist/index.js"
      }
    }
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sefabaser/actions.git"
  },
  "author": "sefabaser",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/sefabaser/actions/issues"
  },
  "homepage": "https://github.com/sefabaser/actions#readme",
  "scripts": {
    "clean-install": "cls && rm -rf node_modules && rm -rf package-lock.json && npm run i",
    "i": "npm cache clean --force && npm install",
    "pretest": "clear",
    "test": "vitest run --mode=quick",
    "test-full": "vitest run",
    "start": "npm run build && node dist",
    "build": "tsup && npx ts-node scripts/remove-private-properties-from-build.ts && npm run restart-vitest",
    "restart-vitest": "touch vitest.config.ts",
    "lint": "biome check . --write --max-diagnostics=1",
    "deploy": "npm run test-full && npm run build && npm publish",
    "prepack": "cp package.json package.json.bak && npx ts-node scripts/prepare-package-json.ts",
    "postpack": "mv package.json.bak package.json"
  },
  "peerDependencies": {
    "helpers-lib": "^1.13.10"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@memlab/core": "1.1.43",
    "@types/node": "20.12.11",
    "tsup": "8.5.1",
    "typescript": "5.3.3",
    "vitest": "3.2.4"
  }
}